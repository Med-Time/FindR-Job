<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardCornerRadius="8dp"
app:cardElevation="4dp"
app:cardBackgroundColor="@android:color/white"
android:layout_margin="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="35dp">


    <TextView
        android:id="@+id/applicantFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/applicantAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/applicantContactDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Detail"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/applicantEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingBottom="4dp"/>


    <Button
        android:id="@+id/opencv"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:backgroundTint="#008CBA"
        android:text="View Resume"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Reason Input Space -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter Reason (optional)"
        app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reasonEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:gravity="top|start" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>
