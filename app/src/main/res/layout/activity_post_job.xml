<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".PostJobActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Fill in the Details to Add a Job"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <!-- Job Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/jobTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittextback"
            android:hint="Enter Job Title"
            android:padding="12dp" />

        <!-- Job Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Description"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/jobDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/edittextback"
            android:hint="Enter Job Description"
            android:gravity="top|start"
            android:padding="12dp"
            android:inputType="textMultiLine" />

        <!-- Job Skills -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills Required"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/jobskill"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittextback"
            android:hint="Enter Skills Required"
            android:padding="12dp" />

        <!-- Job Salary -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/jobSalary"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittextback"
            android:hint="Enter Salary"
            android:padding="12dp"
            android:inputType="number" />

        <!-- Post Job Button -->
        <Button
            android:id="@+id/btnPostJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Job"
            android:textStyle="bold"
            android:backgroundTint="#27D02E"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
