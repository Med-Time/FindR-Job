<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@android:color/darker_gray"
    tools:context=".JobDetailsActivity">

    <!-- Job Title Section -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:padding="0dp"
        android:titleTextColor="#FFFFFF" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- Job Date Section -->
    <TextView
        android:id="@+id/job_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posted on: January 1, 2025"
        android:textSize="14sp"
        android:textColor="#000000"
        android:gravity="end"
        android:layout_marginBottom="8dp"/>

    <!-- Company Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/job_company_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Company Logo"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/logo" />

        <TextView
            android:id="@+id/job_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <!-- Job Description Section -->
    <TextView
        android:id="@+id/job_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Job Description"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Job Skills Section -->
    <TextView
        android:id="@+id/job_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skills: Java, Kotlin, Android"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <!-- Job Salary Section -->
    <TextView
        android:id="@+id/job_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salary: $60,000 - $80,000"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"/>

    <!-- Apply Button -->
    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textColor="#ffffff"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="16dp"/>

    <!-- Ignore Button -->
    <Button
        android:id="@+id/btn_ignore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ignore"
        android:textColor="#ffffff"
        android:backgroundTint="#F44336"/>

</LinearLayout>

</LinearLayout>
