<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <!-- Upload Company Logo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Logo"
            android:textSize="16sp"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/circular_image"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/fui_ic_anonymous_white_24dp" />

        <Button
            android:id="@+id/buttonUploadLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Upload Logo"
            android:backgroundTint="@color/teal_200"
            android:textColor="#FFFFFF" />

        <!-- Company Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Company Name"
            android:textSize="16sp"
            android:textColor="#000" />

        <EditText
            android:id="@+id/editTextCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter company name"
            android:inputType="text" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email Address"
            android:textSize="16sp"
            android:textColor="#000" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter email address"
            android:inputType="textEmailAddress" />

        <!-- Office Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Office Address"
            android:textSize="16sp"
            android:textColor="#000" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter office address"
            android:inputType="textPostalAddress" />

        <!-- Industry Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Industry Type"
            android:textSize="16sp"
            android:textColor="#000" />

        <EditText
            android:id="@+id/editTextIndustryType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter industry type"
            android:inputType="text" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Submit"
            android:backgroundTint="@color/teal_200"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
