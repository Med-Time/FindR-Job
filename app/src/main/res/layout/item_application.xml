<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="25dp"
    android:elevation="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textSize="28sp"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/jobDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applied at : 8/12/2024"
            android:textSize="16sp"
            android:gravity="end"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/applicationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/applicantEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: john.doe@example.com"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/applicantContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: 1234567890"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/applicantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 123 Main St, City"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/jobCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <Button
            android:id="@+id/fileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Resume"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:backgroundTint="#5F6866"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
